<div class="container mt-5">
  <% if @user.any? %>
    <% if @confirmations.present? %>
      <%= render 'confirmations', users: @confirmations %>
      <br>
    <% end %>
    
    <% if @not_confirmations.present? %>
      <hr>
      <%= render 'not_confirmations', users: @not_confirmations %>
      <br>
    <% end %>

    <% if @will_not.present? %>
      <hr>
      <%= render 'will_not', users: @will_not %>
    <% end %>
  <% else %>
    <div class="alert alert-warning" role="alert">
      Não há convidados cadastrados.
    </div>
  <% end %>
</div>